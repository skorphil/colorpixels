  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug API",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/packages/api",
      "runtimeExecutable": "yarn",
      "args": [
        "tsx",
        "${workspaceFolder}/packages/api/src/index.ts"  // Adjust this path to your entry file
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "console": "integratedTerminal"
    }
  ]
}
